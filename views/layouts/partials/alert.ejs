<% if (success_msg && success_msg.length) { %>
<div class="alert alert-success position-absolute m-0" role="alert">
    <%= success_msg %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %> <% if (error_msg && error_msg.length) { %>
<div class="alert alert-danger position-absolute m-0" role="alert">
    <%= error_msg %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>
