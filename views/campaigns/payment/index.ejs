<% layout('layouts/app') %>

<section class="intro-single">
    <div class="container">
        <div class="row">
            <form action="/campaigns/payment/<%= campaign._id %>" method="POST" novalidate class="validated-form">
                <h1>Form Donasi</h1>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input
                        required
                        type="text"
                        class="form-control"
                        id="username"
                        name="payment[username]"
                        aria-describedby="emailHelp"
                        value="<%= user.username %>" />
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Alamat Email address</label>
                    <input
                        required
                        type="email"
                        class="form-control"
                        id="email"
                        name="payment[email]"
                        aria-describedby="emailHelp"
                        value="<%= user.email %>" />
                    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                </div>
                <div class="mb-3">
                    <label for="title" class="form-label">Campaign Title</label>
                    <input
                        required
                        disabled
                        readonly
                        type="text"
                        class="form-control"
                        aria-describedby="emailHelp"
                        value="<%= campaign.title %>" />
                </div>
                <div class="mb-3">
                    <label for="amount" class="form-label">Jumlah</label>
                    <input type="number" class="form-control" id="amount" name="payment[amount]" required />
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</section>
